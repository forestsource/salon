<div id="Header">
<div id="Menu_back">
 	<div id="Login_bar">
		<div id="Login_left">
                 </div>
		<div id="Login_right">
			<div id="Login">
				<% if @current_member %>
				<p class="member">
					<%= link_to @current_member.name + "さん", :account %>
					<%= link_to "ログアウト", :session,
						method: :delete, confirm: "ログアウトしますか？"  %>
				</p>
				<% end %>
				<% unless @current_member %>
					<%= render "shared/login_form" %>
				<% end %>
			</div>
		</div>
	</div>
</div>
</div>

    
