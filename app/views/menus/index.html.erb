<%@page_title="メニュー一覧"%>
<h1><%= @page_title%></h1>
<% if @menus.present? %>
<table class="list">
  <tr>
    <th>メニュー名</th>
    <th>所要時間</th>
    <th>お値段</th>
    <th>カテゴリー</th>
  </tr>
  <% @menus.each.with_index(1) do |menu ,idx| %>
  <tr>
    <td  class="td<%=idx%2%>"align="right"><%= menu.menu_name %></td>
    <td class="td<%=idx%2%>"><%= menu.menu_time %></td>
    <td class="td<%=idx%2%>"><%= menu.price %></td>
    <td class="td<%=idx%2%>"><%= menu.category.category_name %></td>
  </tr>
  <% end %>
</table>
<% else %>
<p>メニューがありません。</p>
<% end %>