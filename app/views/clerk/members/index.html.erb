<% @page_title = "会員一覧"%>
<h1><%= @page_title %></h1>

<%= form_tag :search_clerk_members, method: :get do%>
<p><%= text_field_tag "q", params[:q] %>
<%= submit_tag "検索"%></p>
<%end%>
<table class="list">
  <tr>
    <th>名前</th>
    <th>性別</th>
    <th>電話番号</th>
    <th>メールアドレス</th>
    <th>店長</th>
    <th>店員</th>
  </tr>
  <% @members.each.with_index do |member,idx|%>
  <tr>
    <td class="td<%=idx%2%>" align="right"><%= link_to member.name, [:clerk, member] %></td>
    <td class="td<%=idx%2%>"><%= member.sex ==0 ? "男" : "女" %></td>
    <td class="td<%=idx%2%>"><%= member.tel %></td>
    <td class="td<%=idx%2%>"><%= member.mail%></td>
    <td class="td<%=idx%2%>"><%= member.administrator? ? "○" : "ー" %></td>
    <td class="td<%=idx%2%>"><%= member.clerk? ? "○" : "ー" %></td>
  </tr>
  <% end %>
</table>
